{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2023"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": true,
    "skipLibCheck": true,
    "noEmit": true,

    // ✅ Alias para rutas internas como @/helpers
    "baseUrl": "./src",
    "paths": {
      "@/*": ["*"]
    },

    // ✅ Compatibilidad con Node para Vite/configuración
    "types": ["node"]
  },
  "include": ["src", "vite.config.ts"],
  "exclude": ["node_modules"]
}
